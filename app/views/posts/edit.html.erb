<h1> Edit a Blog Post </h1>
<!-- create a new form, call is something in particular, post is the html method name (could use put/patch to update) -->
<!-- The action attribute tells the app where to go -->
<form name="edit-post" action="update" method="post">
  <input type="hidden" name="_method" value="PUT" />

  <label for="title">Title:</label>
  <input type="text" name="title" id="title" value="<%= @mypost[:title]%>"/>

  <label for="author">Author:</label>
  <input type="text" name="author" id="author" value="<%= @mypost[:author]%>"/>

  <label for="body">Body:</label>
  <textarea name="body" id="body" col="40" rows="8"> <%= @mypost[:body]%> </textarea>
  <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token)%>

  <button type="submit">Submit</button>
</form>
